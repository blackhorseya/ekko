load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")
load("@io_bazel_rules_docker//container:container.bzl", "container_image", "container_push")

go_library(
    name = "issue_lib",
    srcs = [
        "main.go",
        "service.go",
        "wire_gen.go",
    ],
    importpath = "github.com/blackhorseya/ekko/cmd/restful/issue",
    visibility = ["//visibility:private"],
    deps = [
        "//internal/adapter/issue/restful",
        "//internal/app/domain/issue/biz",
        "//internal/app/domain/issue/biz/repo",
        "//internal/pkg/config",
        "//internal/pkg/genx",
        "//internal/pkg/httpx",
        "//internal/pkg/log",
        "//internal/pkg/storage/mariadb",
        "//pkg/adapters",
        "//pkg/httpx",
        "@com_github_google_wire//:wire",
        "@com_github_pkg_errors//:errors",
        "@org_uber_go_zap//:zap",
    ],
)

go_binary(
    name = "issue",
    embed = [":issue_lib"],
    visibility = ["//visibility:public"],
)

container_image(
    name = "image",
    base = "@alpine_linux_amd64//image",
    directory = "/workspace",
    entrypoint = ["./issue"],
    files = [":issue"],
    workdir = "/workspace",
)

container_push(
    name = "push",
    format = "Docker",
    image = ":image",
    registry = "gcr.io",
    repository = "sean-side/ekko-issue-restful",
    tag = "latest",
)
