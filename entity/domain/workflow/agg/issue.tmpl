{
  "type": "bubble",
  "body": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "text",
        "text": "{{if .Completed}} ✅ {{else}} ❌ {{end}} {{ .Title }}",
        "weight": "bold",
        "size": "xl"
      },
      {
        "type": "button",
        "action": {
          "type": "message",
          "label": "Done",
          "text": "done.{{ .ID }}"
        }
      }
    ]
  }
}